    padding-bottom: 8px;
    min-width: 0;
}

.profile-name {
    font-size: 3.5rem;
    font-weight: 800;
    color: #fff;
    line-height: 1;
    margin-bottom: 8px;
    letter-spacing: -2px;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
}

.profile-username {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 24px;
    font-weight: 500;
    letter-spacing: 0.5px;
}

/* -----------------------------------------------------------------------------
 * Profile Action Buttons
 * -------------------------------------------------------------------------- */
.profile-actions {
