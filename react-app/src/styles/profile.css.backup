}

.profile-avatar-edit {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 44px;
    height: 44px;
    background: #fff;
    color: #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: 3px solid #000;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
