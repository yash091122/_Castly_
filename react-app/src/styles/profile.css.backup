/* CARDS & GRIDS REFINED */

.profile-card {
    background: #121212;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 24px;
    padding: 24px;
    margin-bottom: 24px;
}

.profile-card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}

.profile-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    display: flex;
    align-items: center;
    gap: 10px;
}

.profile-card-action {
    font-size: 0.9rem;
    color: #fff;
    cursor: pointer;
    opacity: 0.7;
    transition: opacity 0.2s;
}

.profile-card-action:hover {
    opacity: 1;
}

.profile-grid-2 {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 24px;
}

.profile-grid-3 {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
}

/* HISTORY ITEMS */

.history-item {
    display: flex;
    gap: 16px;
    padding: 12px;
    border-radius: 16px;
    transition: background-color 0.2s;
    overflow: hidden;
}

.history-thumbnail {
    width: 80px;
    height: 120px;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    flex-shrink: 0;
}

.history-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.history-thumbnail-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s;
}

.history-item:hover .history-thumbnail-overlay {
    opacity: 1;
}

.history-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.history-title {
    font-weight: 600;
    color: #fff;
    margin-bottom: 4px;
    line-height: 1.2;
}

.history-meta {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 8px;
}

.history-progress {
    width: 100%;
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
    overflow: hidden;
}

.history-progress-bar {
    height: 100%;
    background: #fff;
    border-radius: 2px;
}

/* GENRE TAGS */

.genre-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.genre-tag {
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.2s;
}

/* OVERVIEW STATS */

.overview-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 32px;
}

.overview-stat-card {
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 140px;
}

.overview-stat-icon {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 12px;
}

.overview-stat-value {
    font-size: 1.8rem;
    font-weight: 800;
    color: #fff;
    line-height: 1;
    margin-bottom: 4px;
}

.overview-stat-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
}

/* REFINED HISTORY GRID */
.history-grid-refined {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 20px;
}

.history-card-refined {
    background: #1a1a1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
}

.history-card-image {
    width: 100%;
    aspect-ratio: 2/3;
    position: relative;
    overflow: hidden;
}

.history-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.progress-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 4px;
    background: #ef4444; /* Watch progress color */
    z-index: 2;
}

.play-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.2s;
}

.history-card-refined:hover .play-overlay {
    opacity: 1;
}

.history-card-details {
    padding: 16px;
}

.history-card-details h4 {
    color: #fff;
    font-size: 0.95rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
}

/* RESPONSIVE */
@media (max-width: 900px) {
    .profile-grid-2 {
        grid-template-columns: 1fr;
    }
    
    .overview-stats {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 600px) {
    .overview-stats {
        grid-template-columns: 1fr;
    }
    
    .profile-tabs-new {
        overflow-x: auto;
        padding-bottom: 12px;
    }
}
