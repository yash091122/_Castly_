/* =============================================================================
   Profile Page Styles - Premium Black & White Design
   ============================================================================= */

/* -----------------------------------------------------------------------------
 * Layout & Page Container
 * -------------------------------------------------------------------------- */
.profile-page {
    padding-bottom: 80px;
    max-width: 1400px;
    margin: 0 auto;
}

/* Loading State */
.page-loader {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
}

.spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(255, 255, 255, 0.1);
    border-top-color: #fff;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

/* =============================================================================
   MODERN HERO SECTION - Glassmorphism Design
   ============================================================================= */

.profile-hero {
    position: relative;
    border-radius: 28px;
    overflow: hidden;
    margin-bottom: 40px;
    min-height: 340px;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    box-shadow:
        0 4px 30px rgba(0, 0, 0, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
}

/* Subtle Background Effects */
.hero-background {
    position: absolute;
    inset: 0;
    background: transparent;
    z-index: 0;
    overflow: hidden;
}

.hero-gradient {
    position: absolute;
    inset: 0;
    background:
        radial-gradient(ellipse 100% 60% at 0% 0%, rgba(255, 255, 255, 0.04) 0%, transparent 50%),
        radial-gradient(ellipse 80% 50% at 100% 100%, rgba(255, 255, 255, 0.02) 0%, transparent 40%);
}

.hero-grid-pattern {
    display: none;
    /* Cleaner look without grid */
}

.hero-glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.3;
    animation: heroGlow 10s ease-in-out infinite alternate;
}

.hero-glow-1 {
    width: 300px;
    height: 300px;
    background: rgba(255, 255, 255, 0.06);
    top: -80px;
    left: -80px;
}

.hero-glow-2 {
    width: 250px;
    height: 250px;
    background: rgba(255, 255, 255, 0.04);
    bottom: -60px;
    right: -60px;
    animation-delay: 5s;
}

@keyframes heroGlow {
    0% {
        transform: scale(1);
        opacity: 0.2;
    }

    100% {
        transform: scale(1.3);
        opacity: 0.4;
    }
}

.hero-banner-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.08;
    filter: blur(3px) grayscale(100%);
}

/* Hero Content Layout */
.hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 40px;
    padding: 48px;
}

/* ========== MODERN AVATAR ========== */
.avatar-section {
    position: relative;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Outer Animated Ring - Gradient border */
.avatar-ring-outer {
    position: absolute;
    inset: -8px;
    border-radius: 50%;
    padding: 2px;
    background: conic-gradient(from 0deg,
            rgba(255, 255, 255, 0.5),
            rgba(255, 255, 255, 0.1),
            rgba(255, 255, 255, 0.5),
            rgba(255, 255, 255, 0.1),
            rgba(255, 255, 255, 0.5));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: ringRotate 4s linear infinite;
}

/* Inner subtle ring */
.avatar-ring-inner {
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

@keyframes ringRotate {
    to {
        transform: rotate(360deg);
    }
}

/* Avatar Container */
.avatar-image {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    z-index: 2;
    background: transparent;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.avatar-image:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
}

.avatar-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.avatar-image:hover img {
    transform: scale(1.08);
}



/* Modern Initial Placeholder */
.avatar-initial {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-weight: 700;
    color: #fff;
    background: linear-gradient(145deg, #2d2d2d, #1a1a1a);
    position: relative;
    overflow: hidden;
}

/* Animated shine effect */
.avatar-initial::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(to right,
            transparent 0%,
            rgba(255, 255, 255, 0.08) 50%,
            transparent 100%);
    transform: rotate(30deg);
    animation: avatarShine 4s ease-in-out infinite;
}

@keyframes avatarShine {

    0%,
    100% {
        transform: translateX(-100%) rotate(30deg);
    }

    50% {
        transform: translateX(100%) rotate(30deg);
    }
}

/* Edit Button */
.avatar-edit-btn {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 34px;
    height: 34px;
    background: rgba(0, 0, 0, 0.9);
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: 2px solid rgba(255, 255, 255, 0.2);
    z-index: 3;
    transition: all 0.3s ease;
}

.avatar-edit-btn:hover {
    background: #fff;
    color: #000;
    border-color: #fff;
}

/* Main Avatar */
.hero-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    overflow: hidden;
    position: relative;
    z-index: 2;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    transition: all 0.4s ease;
}

.hero-avatar:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.5);
}

.hero-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.hero-avatar:hover img {
    transform: scale(1.1);
}

/* Modern Gradient Placeholder */
.hero-avatar-placeholder {
    width: 100%;
    height: 100%;
    background:
        radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        linear-gradient(135deg, #2a2a2a 0%, #1a1a1a 50%, #252525 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    letter-spacing: 2px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    position: relative;
}

/* Subtle pattern overlay */
.hero-avatar-placeholder::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
        repeating-linear-gradient(45deg,
            transparent,
            transparent 2px,
            rgba(255, 255, 255, 0.02) 2px,
            rgba(255, 255, 255, 0.02) 4px);
    pointer-events: none;
}

/* Online Status Indicator */
.avatar-status-indicator {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 28px;
    height: 28px;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    border: 2px solid rgba(255, 255, 255, 0.1);
}

.status-dot {
    width: 12px;
    height: 12px;
    background: #10b981;
    border-radius: 50%;
    animation: statusPulse 2s ease-in-out infinite;
}

@keyframes statusPulse {

    0%,
    100% {
        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.5);
    }

    50% {
        box-shadow: 0 0 0 6px rgba(16, 185, 129, 0);
    }
}

/* Edit Button */
.hero-avatar-edit {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    color: rgba(255, 255, 255, 0.7);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    z-index: 4;
}

.hero-avatar-edit:hover {
    background: #fff;
    color: #000;
    border-color: #fff;
}

/* User Info */
.hero-info {
    flex: 1;
    min-width: 0;
}

.hero-name {
    font-size: 3.2rem;
    font-weight: 800;
    color: #fff;
    line-height: 1.1;
    margin-bottom: 6px;
    letter-spacing: -1px;
}

.hero-username {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.35);
    margin-bottom: 28px;
    font-weight: 500;
    letter-spacing: 0.5px;
}

/* Inline Stats */
.hero-stats {
    display: flex;
    align-items: center;
    gap: 0;
    margin-bottom: 32px;
    padding: 20px 28px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    width: fit-content;
}

.hero-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 28px;
}

.hero-stat:first-child {
    padding-left: 0;
}

.hero-stat:last-child {
    padding-right: 0;
}

.hero-stat-value {
    font-size: 1.8rem;
    font-weight: 800;
    color: #fff;
    line-height: 1;
    margin-bottom: 4px;
}

.hero-stat-label {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
}

.hero-stat-divider {
    width: 1px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
}

/* Action Buttons */
.hero-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.hero-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 14px 28px;
    border-radius: 16px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #fff;
}

.hero-btn:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.2);
}

.hero-btn-primary {
    background: #fff;
    color: #000;
    border-color: #fff;
}

.hero-btn-primary:hover {
    background: #fff;
}

.hero-btn-icon {
    width: 52px;
    height: 52px;
    padding: 0;
    border-radius: 50%;
}

/* Danger Button - Red for Logout */
.hero-btn-danger {
    background: rgba(239, 68, 68, 0.1);
    border-color: rgba(239, 68, 68, 0.3);
    color: #ef4444;
}

.hero-btn-danger:hover {
    background: rgba(239, 68, 68, 0.2);
    border-color: #ef4444;
}

/* Responsive Hero */
@media (max-width: 900px) {
    .hero-content {
        flex-direction: column;
        text-align: center;
        padding: 48px 32px;
        gap: 32px;
    }

    .hero-avatar {
        width: 140px;
        height: 140px;
    }

    .hero-name {
        font-size: 2.8rem;
    }

    .hero-stats {
        width: 100%;
        justify-content: center;
    }

    .hero-actions {
        justify-content: center;
    }
}

@media (max-width: 600px) {
    .hero-content {
        padding: 36px 20px;
    }

    .hero-avatar {
        width: 120px;
        height: 120px;
    }

    .hero-avatar-ring {
        inset: -6px;
    }

    .hero-name {
        font-size: 2.2rem;
    }

    .hero-username {
        font-size: 1rem;
        margin-bottom: 24px;
    }

    .hero-stats {
        flex-wrap: wrap;
        gap: 16px;
        padding: 16px 20px;
    }

    .hero-stat {
        padding: 0 16px;
    }

    .hero-stat-divider {
        display: none;
    }

    .hero-stat-value {
        font-size: 1.5rem;
    }

    .hero-btn {
        padding: 12px 20px;
    }

    .hero-btn-icon {
        width: 46px;
        height: 46px;
    }
}

